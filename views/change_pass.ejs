<% include includes/head.ejs %>
<div class="container">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="jumbotron back">
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <img id="logo" src="/img/logo.png">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                                    data-target="#navbar"
                                    aria-expanded="false" aria-controls="navbar">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="/">Matcha</a>
                        </div>
                        <div id="navbar" class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li><a href="/log">Connexion</a></li>
                                <li><a href="/create">Inscription</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <% if (error != "") { %>
                <div class="alert alert-warning">
                    <strong>Attention !</strong> <%= error %>
                </div>
                <% } %>
                <form method="post" action="/reset/confirm">
                    <input type="hidden" name="log" value="<%= log %>">
                    <input type="hidden" name="key" value="<%= key %>">
                    <div class="form-group">
                        <label for="passwd">Nouveau mot de passe</label> <font color="#a9a9a9">(8 caract√®res min)</font>
                        <input type="password" class="form-control" name="passwd" id="passwd">
                    </div>
                    <div class="form-group">
                        <label for="passwd2">Confirmation du mot de passe</label>
                        <input type="password" class="form-control" name="passwd2" id="passwd2">
                    </div>
                    <center>
                        <button type="submit" class="btn btn-default">Ok</button>
                    </center>
                </form>
            </div>
        </div>
    </div>
</div>
</body>
</html>